<div class="party-invoice">
  <div class="row top-row">
      <span class="left-text">GSTIN: 07AREPS4783P1ZV</span>
      <span class="center-text">TAX INVOICE</span>
      <span class="right-text">State Code : 07</span>
  </div>
  <div class="party-invoice-content">
    <div class="company-details">
      <h1 class="center-text company-name">JMR LOGISTICS</h1>
      <h3 class="center-text head-office">HEAD OFFICE</h3>
      <h4 class="center-text office-details">Shop No 15, Palla More, Old GT Road, Near Wine Shop, Alipur, Delhi-110036</h4>
      <h4 class="center-text office-details">E-mail: jmrlogistics16@gmail.com</h4>
      <h4 class="center-text office-details">Phone: 9212666550, 9910680644, 9999778668</h4>
    </div>
    <table class="table table-condensed party-invoice-details">
      <tbody>
        <tr>
          <td class="col-xs-8 party-details">
            <p class="party-address">M/S: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= party_invoice.party_name %></p>
            <p class="party-address">ADDRESS: <%= party_invoice.party.address %></p>
            <p class="party-address">GSTIN: &nbsp;&nbsp;<%= party_invoice.party.gst_in %></p>
          </td>
          <td>
            <p>INVOICE No: <%= party_invoice.invoice_number %></p>
            <p>DATE: <%= party_invoice.date %></p>
            <p>SHIPPED: BY ROAD</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="big-font payment-details">
    <table class="party-invoice-table">
      <thead>
      <tr class="heading">
        <th>Date</th>
        <th>GR No</th>
        <th>Truck No</th>
        <th>Weight Qtl</th>
        <th>Kanta</th>
        <th>Rate</th>
        <th>Freight (Rs)</th>
        <th>Advance (Rs)</th>
        <th>Balance (Rs)</th>
      </tr>
      </thead>
      <tbody>
      <% party_invoice.bills.each do |bill| %>
        <tr>
          <td><%= bill.entry.entry_date %></td>
          <td><%= bill.entry.payment_summary.g_r_number %></td>
          <td><%= bill.entry.truck_number %></td>
          <td><%= bill.weight2 %></td>
          <td><%= bill.kanta2 %></td>
          <td><%= number_to_indian_currency(bill.entry.rate2, text: '') %></td>
          <td><%= bill.freight %></td>
          <td><%= number_to_indian_currency(bill.entry.party_advance_2, text: '') %></td>
          <td><%= number_to_indian_currency(bill.balance, text: '') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="big-font total-div">
    <table>
      <tbody>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td colspan="8" class="total"><p>TOTAL Rs. </p></td>
        <td><p><%= number_to_indian_currency(party_invoice.invoice_total, text: '') %></p></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>