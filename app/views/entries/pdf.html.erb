<div class="invoice container">
  <% if entry.company.eql?("jmr") %>
    <h1 class="float-right center-text">JMR Logistics</h1>
    <h3 class="center-text">Shop No 15, Palla More, Alipur, Delhi-110036</h3>
  <% else %>
    <h1 class="center-text">R.K. Gujarat Road Carrier</h1>
    <h3 class="center-text">Narela Road Shop No. 84, Vill. Sanoth, Delhi-110040</h3>
  <% end %>  
  <div class="big-font space-mx">
    <div class="big-font space-mx"> 
      <span class="left-text">Invoice No: <%= entry.invoice_number %></span>
      <span class="right-text">Date: <%= entry.invoice_date %></span>
    </div>
    <% if truck_details.nil? %>
      <p class="space">Paid to Mr ____________________________&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Truck No&nbsp;&nbsp;&nbsp;<%= entry.truck_number %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Loading Date&nbsp;&nbsp;&nbsp;<%= entry.entry_date %></p>
    <% else %>
      <p class="space">Paid to Mr&nbsp;&nbsp;<%= truck_details.truck_owner %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Truck No&nbsp;&nbsp;&nbsp;<%= entry.truck_number %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Loading Date&nbsp;&nbsp;&nbsp;<%= entry.entry_date %></p>
    <% end %>
    <div class="space">
      Payment Mode:&nbsp;&nbsp;&nbsp;&nbsp;<img src="..." height="25" width="25" class="squared">&nbsp;&nbsp;Cash
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="..." height="25" width="25" class="squared">&nbsp;&nbsp;NEFT
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="..." height="25" width="25" class="squared">&nbsp;&nbsp;Cheque (CH.No. ______________________)
    </div>
    <div class="space-mx">
      <table class="table table-condensed table-borderless">
        <tbody>
          <tr class="table-space">
            <td class="left-text">Total Freight ( <%= entry.payment_summary.weight %> * <%= entry.rate1 %> + <%= entry.payment_summary.kanta %> )</td>
            <td class="right-align-text"><%= entry.freight1 %></td>
          </tr>
          <tr class="table-space">
            <td>Advance</td>
            <td class="right-align-text">- <%= number_to_indian_currency(entry.self_advance_1, text: '') %></td>
          </tr>
          <tr class="table-space">
            <td>CD</td>
            <td class="right-align-text">- <%= number_to_indian_currency(entry.cash_to_driver, text: '') %></td>
          </tr>
          <tr class="table-space">
            <td>Commission</td>
            <td class="right-align-text">- <%= number_to_indian_currency(entry.commission, text: '') %></td>
          </tr>
          <tr class="table-space">
            <td>Payment Charges</td>
            <td class="right-align-text">- <%= number_to_indian_currency(entry.payment_summary.payment_charges, text: '') %></td>
          </tr>
          <tr class="table-space">
            <td>Shortage</td>
            <td class="right-align-text">- <%= number_to_indian_currency(entry.payment_summary.shortage2, text: '') %></td>
          </tr>
          <tr class="table-space">
            <td>Balance Amount Paid (Rupees)</td>
            <td class="border right-align-text"> <%= number_to_indian_currency(entry.paid_to_truck_owner, text: '') %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="space-mx">
      I hearby confirm that no payment is due with respect to above bill.
    </div>

    <div class="bottom">
      <p class="right-align-text">Signature _______________________</p>
    </div>
  </div>
</div>
