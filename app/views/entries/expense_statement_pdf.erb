<div class="party-invoice">
  <div class="expense-statement-content">
    <div class="company-details">
      <h1 class="text-center company-name">JMR LOGISTICS</h1>
      <h3 class="text-center head-office">HEAD OFFICE</h3>
      <h4 class="text-center office-details">Shop No 15, Palla More, Old GT Road, Near Wine Shop, Alipur, Delhi-110036</h4>
      <h4 class="text-center office-details">E-mail: jmrlogistics16@gmail.com</h4>
      <h4 class="text-center office-details">Phone: 9212666550, 9910680644, 9999778668</h4>
      <h4 class="text-center report-title">Expense Statement</h4>
    </div>
  </div>
  <div class="big-font space-mx invoice-statement">
    <table class="table table-condensed">
      <tbody>
      <tr class="table-header">
        <td style="width:12%">Invoice Date</td>
        <td style="width:10%">Invoice Number</td>
        <td style="width:10%">Advance to Owner (Rs)</td>
        <td style="width:10%">Cash to Driver (Rs)</td>
        <td style="width:10%">Balance Payment</td>
        <td style="width:10%">Total</td>
        <td style="width:14%">Truck Number</td>
        <td style="width:12%">Date of Dispatch</td>
        <td style="width:12%">Truck Owner</td>
      </tr>
      <% entries.each do |entry| %>
        <tr>
          <td style="width:12%"><%= entry.invoice_date %></td>
          <td style="width:10%"><%= entry.invoice_number %></td>
          <td style="width:10%"><%= number_to_indian_currency(entry.self_advance_1, text: '') %></td>
          <td style="width:10%"><%= number_to_indian_currency(entry.cash_to_driver, text: '') %></td>
          <td style="width:10%"><%= number_to_indian_currency(entry.paid_to_truck_owner, text: '') %></td>
          <td style="width:10%"><%= number_to_indian_currency(entry.self_advance_1 + entry.cash_to_driver + entry.paid_to_truck_owner, text: '') %></td>
          <td style="width:14%"><%= entry.truck_number %></td>
          <td style="width:12%"><%= entry.entry_date %></td>
          <td style="width:12%"><%= truncate(entry.truck_owner, length: 10) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>