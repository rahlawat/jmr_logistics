<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">JMR Logistics</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li> <%= link_to 'New Entry', new_entry_path %></li>
        <li> <%= link_to 'Add Truck Detail', new_truck_detail_path %></li>
        <li> <%= link_to 'Truck List', truck_details_path %></li>
        <li> <%= link_to 'New Party', new_party_path %></li>
        <li> <%= link_to 'Party List', parties_path %></li>
        <li> <%= link_to 'Party Invoices', party_invoices_path %></li>
        <li> <%= link_to 'Payment Receipts List', payment_receipts_path %></li>
        <li><%= link_to 'Invoice Statement', "#", "data-toggle": "modal", "data-target": "#invoiceStatementModal" %></li>
        <li> <%= link_to 'Search', search_entries_path %></li>
        <% if user_signed_in? %>
          <li>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          </li>
        <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>
          </li>
        <% end %>
      </ul>
    </div>
    <div id="invoiceStatementModal" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Enter the from and to date</h4>
          </div>
          <div class="modal-body">
            <%= form_for :invoice_statement, url: download_statement_path(format: "pdf"), formtarget: :_blank, method: :get do |f| %>
              <div class="shift mb-1">
                <%= f.label :from_date, class: "required" %>
                <%= f.text_field :from_date, "data-date-format" => "dd/mm/yyyy", class: "form-control datepicker", placeholder: "dd/mm/yyyy" %>
              </div>
              <div class="shift mb-1">
                <%= f.label :to_date, class: "required" %>
                <%= f.text_field :to_date, "data-date-format" => "dd/mm/yyyy", class: "form-control datepicker", placeholder: "dd/mm/yyyy" %>
              </div>
              <td><%= f.submit 'Download', class: "btn btn-lg btn-primary",  input_html: {"data-dismiss": "modal", "aria-hidden": "true" } %></td>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</nav>